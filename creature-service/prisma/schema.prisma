generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Creature {
  id           Int      @id @default(autoincrement())
  name         String
  speciesName  String
  species      Species  @relation(fields: [speciesName], references: [name])
  createdAt    DateTime @default(now())
}

model Species {
  name       String     @id
  lore       String?
  creatures  Creature[]
}
